@model Raisins.Client.Web.Models.Account

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleTypes = ViewBag.RoleTypes as SelectList;
    var beneficiaries = ViewBag.Beneficiaries as SelectList;
    var currencies = ViewBag.Currencies as SelectList;
    var paymentClasses = ViewBag.Classes as SelectList;
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Account</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserName)
            @Html.ValidationMessageFor(model => model.UserName)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.RoleType)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.RoleType, roleTypes)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Setting.BeneficiaryID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Setting.BeneficiaryID, beneficiaries)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Setting.CurrencyID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Setting.CurrencyID, currencies)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Setting.Location)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Setting.Location)
            @Html.ValidationMessageFor(model => model.Setting.Location)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Setting.Class)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Setting.Class, paymentClasses)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

