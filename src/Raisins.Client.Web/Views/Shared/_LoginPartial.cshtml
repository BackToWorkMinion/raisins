@if (Request.IsAuthenticated) {
    <text>
        <span id="loginname">Hello, @User.Identity.Name!</span>
        @using (Html.BeginForm("Logoff", "Accounts", FormMethod.Post, new { id = "logoutForm" })) {
            @Html.AntiForgeryToken()
            <a href="javascript:document.getElementById('logoutForm').submit()" id="loginLink">Log off</a>
        }
    </text>
} else {
        @Html.ActionLink("Log in", "Login", "Accounts", routeValues: null, htmlAttributes: new { id = "loginLink" })
   
}
