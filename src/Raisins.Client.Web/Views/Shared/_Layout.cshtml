<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="@Url.Content("~/Content/Reset.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Main.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/flowplayer-3.2.4.min.js")" type="text/javascript" ></script>
    <script src="@Url.Content("~/Scripts/jquery-1.4.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <title>@ViewHelper.Title [@ViewHelper.Description]</title>
</head>
<body>
    <div id="menu">
        @Html.Partial("_LoginPartial")
    </div>
    <div style="clear:both" />
    <div id="main">
        
        <div id="header">
            <h1>@ViewHelper.Title</h1>
            <p>@ViewHelper.Description</p>
        </div>
        <div id="container">
            <div class="left">
                @RenderBody()
            </div>
            <div class="right">
                @Html.Partial("_Sidebar")
            </div>
        </div>
    </div>
    <div id="footer">
        <p>
            Created by Marc Vitalis and Jaja Abayon.
        </p>
    </div>
</body>
</html>
