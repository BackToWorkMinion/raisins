@using Raisins.Client.Web.Models
@model Raisins.Client.Web.Models.Payment
@{
    ViewBag.Title = "Add Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //view objects
    var beneficiaries = ViewBag.Beneficiaries as SelectList;
    var currencies = ViewBag.Currencies as SelectList;
    var paymentClasses = ViewBag.Classes as SelectList;

}
<h2>@ViewBag.Title</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <p>
            @Html.LabelFor(model => model.Beneficiary)<br />
            @Html.DropDownListFor(model => model.Beneficiary.BeneficiaryID, beneficiaries)
        </p>
        <p>
            @Html.LabelFor(model => model.Class)<br />
            @Html.DropDownListFor(model => model.Class, paymentClasses)
        </p>
        <p>
            @Html.LabelFor(model => model.Name)<br />
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </p>
        <p>
            @Html.LabelFor(model => model.Email)<br />
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </p>
        <p>
            @Html.LabelFor(model => model.Amount)<br />
            @Html.DropDownListFor(model => model.Currency.CurrencyID, currencies)
            @Html.EditorFor(model => model.Amount)
            @Html.ValidationMessageFor(model => model.Amount)
        </p>
        <p>
            @Html.LabelFor(model => model.Remarks)<br />
            @Html.EditorFor(model => model.Remarks)
            @Html.ValidationMessageFor(model => model.Remarks)
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
