@model Raisins.Client.Web.Models.PaymentModel

@{
	View.Title = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";

    var Beneficiaries = ViewHelper.Beneficiaries;
}

<h2>Create</h2>

	@using (Html.BeginForm("Create", "Payment", FormMethod.Post, new { id = "myRaisinsForm" } )) {
		@Html.ValidationSummary(true)

     
     
        <div class="forms">
             <p>
                @Html.Label(Model.Class.ToString())
                @Html.HiddenFor(model => model.Class)
            </p>

            <p>
                @Html.LabelFor(model => model.Beneficiary)
                @Html.DropDownListFor(model => model.Beneficiary, new SelectList(Beneficiaries, "Name", "Name"))
                @Html.ValidationMessageFor(model => model.Beneficiary)
            </p>
            <p>
                @Html.LabelFor(model => model.Name)
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </p>
            <p>
                @Html.LabelFor(model => model.Amount)

                @Html.Label(string.Format("({0})", Model.Currency))
                @Html.HiddenFor(model => model.Currency)

                @Html.EditorFor(model => model.Amount)
                @Html.ValidationMessageFor(model => model.Amount)
            </p>
            <p>
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </p>
            <p>
                <input type="submit" value="Save" />
            </p>
        </div>
	}

    @Html.ActionLink("Show List", "Index")        