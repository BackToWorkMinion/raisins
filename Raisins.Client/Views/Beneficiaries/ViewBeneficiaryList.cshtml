@using Raisins.Client.ViewModels
@model BeneficiaryListViewModel
@{
    ViewBag.Title = "List of Beneficiaries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <h3>List of Beneficiaries</h3>
        <hr />
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>
                        Beneficiary
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Tools
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Beneficiaries)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditBeneficiary", "Beneficiaries", new { beneficiaryID = item.BeneficiaryID }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
